<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#boothTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 310
            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Booth/AllSocialMedia?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#boothTable')) {
                $('#boothTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>



