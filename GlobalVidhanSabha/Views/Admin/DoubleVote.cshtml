<script>
    @*insert*@
    $(document).on("submit", "#doubleVoterForm", function (e) {
        e.preventDefault();
        console.log("Form submit event fired");

        let formData = new FormData(this);

        // ✅ Get all selected village IDs
        const selectedVillages = $('#VillageList').val(); // returns array of selected values

        if (selectedVillages && selectedVillages.length > 0) {
            // Convert array to comma-separated string
            const villageIds = selectedVillages.join(',');
            formData.set('VillageListId', villageIds); // override with comma-separated value
        } else {
            formData.set('VillageListId', ''); // no selection
        }
        $.ajax({
            url: '/Admin/AddDoubleVoter',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function (response) {
                if (response.status) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message,
                        timer: 1500,
                        showConfirmButton: true
                    }).then(() => {

                        var modalEl = document.getElementById('doubleVoterModal');
                        var modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();


                        $("#doubleVoterForm")[0].reset();
                        location.href = '/admin/DoubleVote';


                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message
                    });
                }
            },

            error: function (xhr, status, error) {
                console.error("AJAX Error:", xhr.responseText);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Some error occurred!!'
                });
            }
        });
    });




    //delete
    $(document).on('click', '.delete-btn', function () {
        var id = $(this).data('id');

        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/DeleteDoubleVoter',
                    type: 'POST',
                    data: { id: id },
                    dataType: "json",
                    success: function (res) {
                        if (res.status) {
                            Swal.fire({
                                title: "Deleted!",
                                text: res.message,
                                icon: "success",
                                timer: 2000,
                                showConfirmButton: true,
                                didClose: () => {
                                    location.href='/admin/DoubleVote'
                                }
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
