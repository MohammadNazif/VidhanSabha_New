            </div>

            <div class="modal-body">
                <form id="boothForm" class="row g-3">

                    <!-- Booth Number + Village -->
                    <div class="col-md-6">
                        <label for="boothNo" class="form-label">Booth Number</label>
                        <select class="form-select" id="boothNo" name="boothNo">
                            <option value="">Select Booth</option>
                            @*<option value="501">501</option>
