                                {
                                    <option value="@booth.Booth_Id" @(Model.boothNo == booth.Booth_Id ? "selected" : "")>@booth.BoothNumber</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="village" class="form-label ">Village</label>
                        @{
                            var villageIds = (Model.village_Id ?? "").Split(',');
                            var villageNames = (Model.villageName ?? "").Split(',');
                        }
                        <select class="form-select js-example-basic-multiple" id="village" name="village" multiple="multiple">
                            @for (int i = 0; i < villageIds.Length; i++)
                            {
                                <option value="@villageIds[i]" selected>@villageNames[i]</option>
                            }
                        </select>



                    </div>

                    <!-- Sahmat/Asahmat + Name -->
                    <div class="col-md-6">
                        <label for="sahmatAsahmatName" class="form-label">Sahmat / Asahmat</label>
                        <select class="form-select" id="sahmatAsahmatName" name="sahmatAsahmat">
                            <option value="">Select</option>
                            @foreach (var data in SahmatAsahmatType)
                            {
                                <option value="@data.Id" @(Model.sahmatAsahmat == data.Id ? "selected" : "")>@data.type</option>
                            }
                        </select>

                    </div>
                    <div class="col-md-6">
                        <label for="personName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="personName" name="name" value="@Model.name" />
                    </div>

                    <!-- Age + Mobile -->
                    <div class="col-md-6">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" class="form-control" id="age" name="age" value="@Model.age" />
                    </div>
                    <div class="col-md-6">
                        <label for="mobile" class="form-label">Mobile</label>
                        <input type="text" class="form-control" id="mobile" name="mobile" maxlength="10" value="@Model.mobile" />
                    </div>

                    <!-- Party -->
                    <div class="col-md-6">
                        <label for="party" class="form-label">Party</label>

                        <select class="form-select" id="party" name="party" required>
                            <option value="">Select</option>
                            @foreach (var data in party)
                            {
                                <option value="@data.id" @(Model.partyId == data.id ? "selected" : "")>@data.party</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-6 @(Model.sahmatAsahmatName == "Asahamat" ? "" : "d-none")" id="reasonDiv">
                        <label for="reason" class="form-label">Reason</label>
                        <textarea class="form-control" id="reason" name="reason" rows="1">@Model.reason</textarea>
                    </div>

