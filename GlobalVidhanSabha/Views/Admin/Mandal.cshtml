<script>
    $('#mymandalform').on('submit', function (e) {
        e.preventDefault();

        var form = $(this);
        var formData = form.serialize();
        var isUpdate = $('#MandalId').val() !== "";

        $.ajax({
            type: "POST",
            url: '/Admin/AddMandal',
            data: formData,
            success: function (response) {
                debugger
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message, // Already customized on server
                        confirmButtonColor: '#3085d6',
                        didClose: () => {
                            $('#addMandalModal').modal('hide');
                            window.location.reload();
                        }
                    });
                    form[0].reset();
                    $("#MandalId").val(""); // Reset hidden ID
                    $("#addMandalModalLabel").text("Add New Mandal");
                    $("#mymandalform button[type=submit]").text("Add Mandal");
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed',
                        text: response.message || 'Failed to process mandal.',
                        confirmButtonColor: '#d33'
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An unexpected error occurred.',
                    confirmButtonColor: '#d33'
                });
            }
        });
    });

</script>


<script>
    $(document).on("click", ".btn-delete", function (e) {
        e.preventDefault();

        var id = $(this).data("id");
        var row = $(this).closest("tr");

        Swal.fire({
            title: 'Are you sure?',
            text: "This mandal will be deleted permanently!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Admin/DeleteMandal",
                    data: { Id: id },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire(
                                'Deleted!',
                                response.message,
                                'success'
                            );
                            row.remove();
                            $(".text-center tr").each(function (index) {
                                $(this).find("td:first").text(index + 1);
                            });
                        } else {
                            Swal.fire(
                                'Failed!',
                                response.message,
                                'error'
                            );
                        }
                    },
                    error: function () {
                        Swal.fire(
                            'Error!',
                            'Something went wrong while deleting.',
                            'error'
                        );
                    }
                });
            }
        });
    });
</script>
<script>
    $(document).on("click", ".btn-edit", function (e) {
        e.preventDefault();

        var id = $(this).data("id");

        $.ajax({
            type: "GET",
            url: "/Admin/EditMandal",
            data: { Id: id },
            success: function (response) {
                if (response && response.Id) {
                    $("#MandalId").val(response.Id);
                    $("#mandalName").val(response.Name);

                    $("#addMandalModalLabel").text("Edit Mandal");
                    $("#mymandalform button[type=submit]").text("Update Mandal");

                    $("#addMandalModal").modal("show");
                } else {
                    Swal.fire("Not Found!", "Mandal not found.", "warning");
                }
            },
            error: function () {
                Swal.fire("Error!", "Something went wrong while fetching mandal.", "error");
            }
        });
    });

</script>

<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 300,
                autoWidth: false,   // 🚫 DataTables auto width ko disable karega
                columnDefs: [
                    { width: "50px", targets: 0 },   // S.N.
                    { width: "750px", targets: 1 },  // Mandal Name
                    { width: "200px", targets: 2 }   // Actions
                ]
            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Admin/Mandal?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#myTable')) {
                $('#myTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>
