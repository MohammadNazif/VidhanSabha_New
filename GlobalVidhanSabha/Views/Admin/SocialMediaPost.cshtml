<div class="modal fade" id="postModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form id="postForm">
                <div class="modal-header table-head">
                    <h5 class="modal-title text-white fw-bold">Create Social Media Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    @*<input type="hidden" id="PostId" name="PostId" />*@

                    <div class="row g-1">


                        <div class="col-md-6">
                            <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                            <input type="text" id="title" name="title" class="form-control" placeholder="Title" required value="@Model.title" />
                        </div>


                        <!-- Post Link -->
                        <div class="col-md-6">
                            <label for="post" class="form-label">Post image <span class="text-danger">*</span></label>
                            <input type="file" id="post" name="post" class="form-control" required value="@Model.PostUrl" />
                        </div>


                        <!-- Description -->
                        <div class="col-md-6">
                            <label for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea id="Description" name="Description" class="form-control" rows="1" placeholder="Write your post description" required>@Model.Description</textarea>
                        </div>


                        <!-- Platform -->
                        <div class="col-md-6">
                            <label for="Platform" class="form-label">Select Platform <span class="text-danger">*</span></label>
                            <select class="form-select" id="Platform" name="Platform" multiple required>
                                <option value="Facebook" @(Model.Platform != null && Model.Platform.Contains("Facebook") ? "selected" : "")>Facebook</option>
                                <option value="Instagram" @(Model.Platform != null && Model.Platform.Contains("Instagram") ? "selected" : "")>Instagram</option>
                                <option value="Twitter" @(Model.Platform != null && Model.Platform.Contains("Twitter") ? "selected" : "")>Twitter</option>
                            </select>
                        </div>





                        <!-- Booth(s) -->
                        <div class="col-md-6">
                            <label for="BoothIds" class="form-label">Select Booth(s) <span class="text-danger">*</span></label>
                            <select id="BoothIds" name="BoothIds" class="selectpicker form-control" multiple
                                    data-live-search="true" data-actions-box="true" title="Choose booth(s)" required>
                                @foreach (var booth in (IEnumerable<VishanSabha.Models.Booth>)ViewBag.BoothList)
                                {
                                    <option value="@booth.Booth_Id" @(Model.BoothIds != null && Model.BoothIds.Contains(booth.Booth_Id) ? "selected" : "")>
                                        @booth.BoothNumber
                                    </option>
                                }
                            </select>

                        </div>

                        <!-- Sector(s) -->
                        <div class="col-md-6">
                            <label for="SectorIds" class="form-label">Select Sector(s) <span class="text-danger">*</span></label>
                            <select id="SectorIds" name="SectorIds" class="selectpicker form-control" multiple
                                    data-live-search="true" data-actions-box="true" title="Choose sector(s)" required>
                                @foreach (var sector in (IEnumerable<VishanSabha.Models.Sector>)ViewBag.SectorList)
                                {
                                    <option value="@sector.Id" @(Model.SectorIds != null && Model.SectorIds.Contains(sector.Id) ? "selected" : "")>
                                        @sector.SectorName
                                    </option>
                                }
                            </select>

                        </div>
                    </div>
                </div>
                @if (Model.PostId != 0)
                {
                    <div class="modal-footer">
                        <input type="hidden" name="PostId" value="@Model.PostId" id="PostId" />
                        <button type="submit" class="btn btn-outline-orange btn-sm">Update</button>
                    </div>
                }
                else
                {
                    <div class="modal-footer">
