<script>
    $(document).on("click", ".openModal", function () {
        var postId = $(this).data("id");

        $.ajax({
            url: '/admin/GetPostDetailsById',
            type: 'GET',
            data: { id: postId },
            success: function (data) {
                // clear old rows
                $("#postDetailsTable tbody").empty();

                if (data && data.length > 0) {
                    // loop through returned data
                    $.each(data, function (index, item) {
                        $("#postDetailsTable tbody").append(
                            "<tr>" +
                            "<td class='text-center' style='text-align:center!important;'>" + (index + 1) + "</td>" +
                            "<td  class='text-center'>" + item.Boothnumber + "</td>" +
                            //"<td >" + item.PollingStationBoothName + "</td>" +
                            "<td>" + item.boothName + "</td>" +
                            "<td>" + item.BoothIncharge + "</td>" +
                            "<td>" + item.SectorName + "</td>" +
                            "<td>" + item.SectorInchargeName + "</td>" +
                            "</tr>"
                        );
                    });
                } else {
                    // show no data message
                    $("#postDetailsTable tbody").append(
                        "<tr><td colspan='6' class='text-center text-danger'>No data found</td></tr>"
                    );
                }

                var myModal = new bootstrap.Modal(document.getElementById('postdataTableModal'));
                myModal.show();
            },
            error: function (xhr, error, status) {
                console.log(xhr, error, status);
            }
        });
    });


</script>


