         $('table.dataTabl-auto').each(function () {
             new DataTable(this, {
                 pageLength: 100,
                 lengthMenu: [100, 200, 300, 400, 500],
                 // Agar buttons chahiye to ye uncomment karo
                 // dom: 'Bfrtip',
                 // buttons: ['copy', 'excel', 'pdf', 'print']
