
@model IEnumerable<VishanSabha.Models.Booth>

<div class="container-fluid mt-1 m-1">

    <div class="table-responsive shadow rounded p-2">
        <table class="table table table-hover table-bordered align-middle dataTabl-auto">
            <thead class="table-head">
                <tr class="myhead">
                    <th class="text-white py-2 fw-bold">S.N.</th>
                    @*<th class="text-white py-2 fw-bold">Mandalid</th>
                        <th class="text-white py-2 fw-bold">SectorId</th>*@
                    <th class="text-white py-2 fw-bold">Booth No</th>
                    @*<th class="text-white py-2 fw-bold">Booth Name</th>*@
                    <th class="text-white py-2 fw-bold">Polling Station</th>
                    <th class="text-white py-2 fw-bold">Incharge</th>
                    <th class="text-white py-2 fw-bold">Caste</th>
                    <th class="text-white py-2 fw-bold">Contact</th>
                    <th class="text-white py-2 fw-bold">Booth Total Votes</th>
                    <th class="text-white py-2 fw-bold">Senior Citizen</th>
                    <th class="text-white py-2 fw-bold">Handicap</th>
                    <th class="text-white py-2 fw-bold">Double Votes</th>
                    <th class="text-white py-2 fw-bold">Pravasi</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var booth in Model)
                    {
                        <tr>
                            <td>@i</td>
                            @*<td class="py-2">@booth.MandalId</td>
                                <td class="py-2">@booth.SectorId</td>*@
                            <td class="py-2">@booth.BoothNo</td>
                            @*<td class="py-2">@booth.PollingStationBoothName</td>*@
                            <td class="py-2">@booth.BoothName</td>
                            <td class="py-2">@booth.InchargeName</td>
                            <td class="py-2">@booth.castname</td>
                            <td class="py-2">@booth.Mobile</td>
                            <td class="py-2">@booth.TotalVotes</td>
                            <td class="py-2">@booth.SeniorCitizen</td>
                            <td class="py-2">@booth.Handicap</td>
                            <td class="py-2">@booth.DoubleVotes</td>
                            <td class="py-2">@booth.Pravasi</td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="11" class="text-center">No Booth Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
