<script>
    $(document).on("click", ".openBoothModal", function () {
        var boothid = $(this).data("boothid");


        $("#boothTable tbody").empty();

        $.ajax({
            url: '/Admin/GetBoothsInchargeByBoothId',
            type: 'GET',
            data: { boothid: boothid },
            success: function (data) {
                console.log(data);
                $.each(data, function (i, booth) {

                    $("#boothTable tbody").append(`
                    <tr>
                        <td>${i+1}</td>
                        <td>${booth.BoothName}</td>
                        <td>${booth.BoothNumber}</td>
                        <td>${booth.InchargeName}</td>
                        @*<td>${booth.FatherName}</td>*@
                        @*<td>${booth.Age}</td>
                        <td>${booth.castname}</td>
                        <td>${booth.subcaste}</td>*@
                        <td>${booth.Address}</td>
                        @*<td>${booth.Education}</td>*@
                        <td>${booth.PhoneNumber}</td>
                        <td><img src="${booth.ProfiileImage}" height="40" width="40"/></td>
                    </tr>

                `);
                });
            },
            error: function () {
                Swal.fire({
                    icon: 'warning',
                    title: 'warning',
                    text: 'Some Error Occured!!',
                    didClose: () => {
                        location.reload(true);
                    }
                });
                //alert("Failed to load booth data.");
            }
        });
    });

</script>

