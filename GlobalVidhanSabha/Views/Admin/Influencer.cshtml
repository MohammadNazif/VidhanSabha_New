<script>
    $(document).ready(function () {

        $('#designationContainer').hide();
        $('#personContainer').hide();
        $('#boothContainer').hide();
        $('#villageContainer').hide();
        $('#detailContainer').hide();
        $('#effectiveContainer').addClass('col-sm-12');
        $('#effectivePerson').on('change', function () {
            const isEff = $(this).val();
            $('#effectiveContainer').removeClass();
            $('#effectiveContainer').addClass('col-sm-6');
            if (isEff === "true") {
                // Effective Person hai → show
                $('#designationContainer').show();
                $('#personContainer').show();
                $('#boothContainer').hide();
                $('#villageContainer').hide();
                $('#detailContainer').hide();
                $('#designation').attr('required', true);
                $('#personDropdown').attr('required', true);
                $('#detailContainer input, #detailContainer select, #detailContainer textarea').removeAttr('required');
            } else {
                // Nahi hai → hide
                $('#designationContainer').hide();
                $('#personContainer').hide();
                $('#boothContainer').show();
                $('#villageContainer').show();
                $('#detailContainer').show();
                $('#designation, #personDropdown').removeAttr('required');
                $('#detailContainer input, #detailContainer select, #detailContainer textarea').attr('required', true);
            }
        });
        $('#designation').on('change', function () {
            const desgId = $(this).val();
            $.ajax({
                url: '/admin/GetPersonsByDesignation',
                type: 'get',
                data: { desgId: desgId },
                success: function (res) {
                    if (res.status) {
                        let $dropdown = $('#personDropdown');
                        $dropdown.empty();
                        $dropdown.append('<option value="" selected>-- Select Person --</option>');

                        $.each(res.data, function (i, person) {
                            $dropdown.append(
                                $('<option>', { value: person.effectivePersonId, text: person.Name })
                            );
                        });
                    } else {
                        Swal.fire('Warning', 'No person found in this designation', 'warning');
                    }
                },
                error: function (xhr) {
                    Swal.fire('Error', 'Some error occured while getting data', 'error').then(() => {
                        console.log(xhr);
                    });
                }
            });
        });

        $("#Category").change(function () {
            var selectedId = $(this).val();

            if (selectedId) {
                $.ajax({
                    url: '/Admin/GetSubcasteByCategory',
                    type: 'GET',
                    data: { id: selectedId },
                    success: function (response) {

                        $("#Caste").empty();
                        $("#Caste").append('<option value="">-- Select Caste --</option>');


                        $.each(response, function (i, item) {
                            $("#Caste").append('<option value="' + item.SubCaste_Id + '">' + item.SubCasteName + '</option>');
                        });
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Some error occured!!'
                        });
                    }
                });
            } else {
                $("#Caste").empty();
                $("#Caste").append('<option value="">-- Select Caste --</option>');
            }
        });

        // Form submission
        $('#submitBtn').on('click', function (e) {
            e.preventDefault();
            const form = $('#influencerPersonForm')[0];
            var formData = new FormData(form);

            const effectivePerson = $('#effectivePerson').val() === 'true'; // ✅ convert to boolean
            const designation = $('#designation').val();
            const person = $('#personDropdown').val();
            const selectedVillages = $('#VillageList').val();
            const villageIds = (selectedVillages && selectedVillages.length) ? selectedVillages.join(',') : '';

            formData.set('IsEffective', effectivePerson ? 'true' : 'false');
            formData.set('Designation', designation);
            formData.set('PersonId', person);
            formData.set('VillageListId', villageIds);

            $.ajax({
                url: '/admin/AddInfluencer',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (res) {
                    if (res.success) {
                        Swal.fire('Success', res.message, 'success').then(() => location.reload());
                    } else {
                        Swal.fire('Error', res.message, 'error');
                    }
                },
                error: function () {
                    Swal.fire('Error', 'Something went wrong!', 'error');
                }
            });
        });



        //$('#influencerPersonForm').on('submit', function (e) {
        //    e.preventDefault();

        //    var form = $(this);
        //    var formData = form.serializeArray(); // Serialize all visible fields

        //    $.ajax({
        //        url: '/admin/AddInfluencer',
        //        type: 'POST',
        //        data: formData,
        //        success: function (res) {
        //            if (res.success) {
        //                Swal.fire('Success', res.message, 'success').then(() => {
