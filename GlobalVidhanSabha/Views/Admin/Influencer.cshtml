        //        error: function (err) {
        //            Swal.fire('Error', 'Something went wrong!', 'error');
        //        }
        //    });
        //});

        $('#createNewBtn').click(function () {
            $('#influencerPersonForm')[0].reset();
            $('#Id').val(0);
            $('#influencerPersonModal .modal-title').text('Create Influencer Person');
        });

        // Delete (soft)
        $('.delete-btn').click(function () {
            var id = $(this).data('id');
            Swal.fire({
                title: 'Are you sure?',
                text: "This will delete the record.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/DeleteInfluencerPerson',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire('Deleted!', response.message, 'success').then(() => {
                                    location.reload();
                                })
                            } else {
                                Swal.fire('Error', response.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Error', 'An unexpected error occurred.', 'error');
                        }
                    });
                }
            });
        });
        $('.edit-btn').click(function () {
            var id = $(this).data('id');

            $.ajax({
                url: '/admin/GetInfluencerById',
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    console.log(data, "Influencer data");

                    if (data) {

                        $('#influencerId').val(data.Id);


                        $('#effectivePerson').val(data.IsEffective.toString()).trigger('change');

                        if (data.IsEffective) {
                            $('#designation').val(data.Designation);
                            $('#designation').val(data.Designation).trigger('change');


                            setTimeout(() => {
                                $('#personDropdown').val(data.PersonId);
                            }, 500);
                        }

                        else {
                            $('input[name="PersonName"]').val(data.PersonName);
                            $('#Category').val(data.Category).trigger('change');

                            setTimeout(() => {
                                $('#Caste').val(data.Caste);
                            }, 300);

                            $('input[name="Mobile"]').val(data.Mobile);
                            $('#boothNo').val(data.BoothId).trigger('change');


                            const preselectedVillages = (data.VillageListId || "")
                                .split(',')
                                .map(v => v.trim())
                                .filter(v => v !== "");


                            setTimeout(() => {

                                $('#VillageList').val(preselectedVillages).trigger('change');
                            }, 1000);

                            $('textarea[name="Description"]').val(data.Description);
                        }

                        // Open modal and update title
                        $('#influencerPersonModal').modal('show');
                        $('#effectivePersonLabel').text('Edit Influencer Person');
                    } else {
                        Swal.fire('Error', 'Record not found', 'error');
                    }
                },
                error: function () {
                    Swal.fire('Error', 'Failed to load influencer data', 'error');
                }
            });
        });
