<div class="container-fluid mt-5 m-3">
    <div class="d-flex justify-content-between mb-3 pt-3">
        <h2 class="text-orange" style="color: #FF8C42">Influencer Person</h2>
        <button class="btn btn-primary" id="createNewBtn" data-bs-toggle="modal" data-bs-target="#influencerPersonModal">
            Create
        </button>
    </div>
    <div class="  " style="white-space:nowrap!important;">

        <table id="myTable" class="table table-responsive-lg table-hover table-bordered align-middle">


            <thead class="table-head">
                <tr class="myhead">
                    <th style="text-align:center!important;">S.N</th>
                    <th class="coll-col">Booth No</th>
                    <th>Village</th>
                    <th>Designation</th>
                    <th>Name</th>
                    <th class="caste-col">Caste</th>
                    <th>Contact</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (list != null)
                {
                    int index = 1;
                    foreach (var item in list)
                    {
                        <tr>
                            <td class="coll-col" style="text-align:center!important;">@index</td>
                            <td class="coll-col"  style="text-align:center!important;">@item.BoothNumber</td>
                            <td>@item.VillageListName</td>
                            <td>@(!string.IsNullOrEmpty(item.EffectiveDesignationdata) ? item.EffectiveDesignationdata : "N/A" )</td>
                            <td>@item.PersonName</td>
                            <td class="caste-col">@item.SubCasteName</td>
                            <td>@item.Mobile</td>
                            <td>@item.Description</td>
                            <td>
                                <button class="btn btn-sm  me-1 edit-btn"
                                        data-id="@item.Id"
                                        title="Edit">
                                    <i class="fas fa-edit edit-icon"></i>
                                </button>
                                <button class="btn btn-sm  me-1 delete-btn"
                                        data-id="@item.Id"
                                        title="Delete">
                                    <i class="fas fa-trash-alt delete-icon"></i>
                                </button>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- === Effective Person Modal === -->
<div class="modal fade" id="influencerPersonModal" tabindex="-1" aria-labelledby="effectivePersonLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="influencerPersonForm" method="post" data-mode="create">
                <input type="hidden" name="Id" id="influencerId" />

                <!-- Modal Header -->
                <div class="modal-header table-head">
                    <h5 class="modal-title text-white fw-bold" id="effectivePersonLabel">Create Influencer Person</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="row g-3">
                        <!-- Is Effective Person -->
                        <div class="" id="effectiveContainer">
                            <label for="boothDropdown" class="form-label">Effective Person</label>
                            <select class="form-select form-select-sm" name="IsEffective" id="effectivePerson" required>
                                <option selected disabled>-- Select Option --</option>
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                        </div>
                        <!--Designation-->
                        <div class="col-md-6 g-3" id="designationContainer">
                            <label for="Designation" class="form-label">Designation</label>
                            <select name="Designation" id="designation" class="form-select form-select-sm" required>
                                <option value="">-- Select Designation --</option>
                                @if (designations != null)
                                {
                                    foreach (var item in designations)
                                    {
                                        <option value="@item.Id">@item.EffectiveDesignationdata</option>
                                    }
                                }
                            </select>
                        </div>

                        <!--Person-->
                        <div class="col-md-6 g-3" id="personContainer">
                            <label for="person" class="form-label">Person</label>
                            <select name="PersonId" id="personDropdown" class="form-select form-select-sm" required>
                                <option value="">-- Select Person --</option>
                            </select>
                        </div>

                        <!-- Booth -->
                        <div class="col-md-6" id="boothContainer">
                            <label for="boothDropdown" class="form-label">Booth</label>
                            <select class="form-select form-select-sm" name="BoothId" id="boothNo">
                                <option value="">-- Select Booth --</option>
                                @foreach (var booth in (IEnumerable<VishanSabha.Models.Booth>)ViewBag.BoothList)
                                {
                                    <option value="@booth.Booth_Id">@booth.BoothNumber</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6" id="villageContainer">

                            <label class="form-label small">Village </label>
                            <select class="form-select js-example-basic-multiple" name="VillageListId" required id="VillageList" multiple="multiple">
                                <option value="">-- Select Village --</option>

                            </select>

                        </div>



                        <div class="row" id="detailContainer">


                            <!-- Name -->
                            <div class="col-md-6 g-3">
                                <label for="Name" class="form-label">Name</label>
                                <input type="text" name="PersonName" class="form-control form-control-sm" placeholder="Enter Name" required />
                            </div>

                            <!-- Category -->
                            <div class="col-md-6 g-3">
                                <label for="Category" class="form-label">Category</label>
                                <select class="form-control form-select-sm" id="Category" name="Category">
                                    <option value="">-- Select Category --</option>
                                    @if (CategoryList != null && CategoryList.Any())
                                    {
                                        foreach (var data in CategoryList)
                                        {
                                            <option value="@data.Caste_Id">@data.CasteName</option>
                                        }
                                    }
                                </select>
                            </div>

                            <!-- Caste -->
                            <div class="col-md-6 g-3">
                                <label for="Caste" class="form-label">Caste</label>
                                <select class="form-control form-select-sm" id="Caste" name="Caste">
                                    <option value="" disabled selected>-- Select Caste --</option>
                                </select>
                            </div>

                            <!-- Mobile -->
                            <div class="col-md-6 g-3">
                                <label for="Mobile" class="form-label">Mobile</label>
                                <input type="tel" name="Mobile" class="form-control form-control-sm" placeholder="Enter Mobile Number" maxlength="10"/>
                            </div>

                            <!-- Description -->
                            <div class="col-md-12 g-3">
                                <label for="Description" class="form-label">Description</label>
                                <textarea name="Description" class="form-control form-control-sm" placeholder="Enter Description"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer border-0">
                    <button type="submit" id="submitBtn" class="btn btn-outline-orange">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


