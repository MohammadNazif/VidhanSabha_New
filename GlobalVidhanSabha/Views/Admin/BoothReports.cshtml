<div class="container-fluid m-3 mt-5  w-100">
    <div class="d-flex justify-content-between mb-2">
        <h4 style="color: #FF8C42;">Booth Reports</h4>
    </div>
    <div class="row g-1">
        <div class="col-sm-2 divSize">
            <select class="form-select form-select-sm shadow-sm !rounded-pill border-primary" multiple id="boothFilter">

                @if (BoothList != null && BoothList.Any())
                {
                    foreach (var data in BoothList)
                    {
                        <option value="@data.Booth_Id">@data.BoothNumber</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-2 divSize">
            <select class="form-select form-select-sm shadow-sm rounded-pill border-primary" multiple id="villageFilter">

                @if (villageList != null && villageList.Any())
                {
                    foreach (var data in villageList)
                    {
                        <option value="@data.villageId">@data.Villagename</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-2 divSize">
            <select class="form-select form-select-sm shadow-sm rounded-pill border-primary" multiple id="casteFilter">

                @if (casteList != null && casteList.Any())
                {
                    foreach (var data in casteList)
                    {
                        <option value="@data.SubCaste_Id">@data.SubCasteName</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-2 divSize">
            <button type="button" class="btn btn-outline-secondary w-100 shadow-sm round-0" id="filterButton" title="Filters">
                <i class="bi bi-arrow-clockwise"></i> Filter
            </button>
        </div>
        <div class="col-sm-2 divSize">
            <button type="button" class="btn btn-outline-secondary w-100 shadow-sm round-0" id="resetFilters" title="Reset Filters">
                <i class="bi bi-arrow-clockwise"></i> Reset Filter
            </button>
        </div>
    </div>

    <div class="table-wrapper shadow rounded p-2">

        <div class="table-controls  ">
            <div id="entriesAndExport" class="d-flex align-items-center gap-2">
                <div id="exportIcons" class="d-flex align-items-center gap-1">
                    <!-- Excel Download -->
                    <a href="#" id="downloadExcelLink">
                        <i class="bi bi-file-earmark-excel-fill"
                           style="font-size: 1.3rem; color: #1D6F42; cursor:pointer;"
                           id="downloadExcel"></i>
                    </a>

                    <!-- PDF Download -->
                    <a href="#" id="downloadPdfLink">
                        <i class="bi bi-file-earmark-pdf-fill"
                           style="font-size: 1.3rem; color: #D32F2F; cursor:pointer;"
                           id="downloadPdf"></i>
                    </a>
                    @*<a href="@Url.Action("BoothExportReport", "Export", new { format = "excel" })"
                     <i class="bi bi-file-earmark-excel-fill"  style="font-size: 1.3rem; color: #1D6F42; cursor:pointer;"></i>
                         </a>

                    <a href="@Url.Action("BoothExportReport", "Export", new { format = "pdf" })"
                        <i class="bi bi-file-earmark-pdf-fill"  style="font-size: 1.3rem; color: #D32F2F; cursor: pointer;"></i>
                      </a>*@
                </div>

            </div>
            <div id="searchBox"></div>
        </div>


        <div class="  " style="white-space:nowrap!important;">

            <table id="boothTable" class="table table-responsive-lg table-hover table-bordered align-middle">


                <thead class="table-head">
                    <tr class="text-light myhead">

                        <th class="text-white ">Booth No.</th>
                        @*<th class="text-white py-2">Booth Name</th>*@
                        <th class="text-white py-2">Polling Station</th>
                        <th class="text-white py-2">Booth Adhyaksh</th>
                        <th class="text-white py-2 fw-bold">Contact</th>
                        <th class="text-white py-2">Village</th>
                        @*<th class="text-white py-2">Father Name</th>
                        <th class="text-white py-2">Age </th>*@
                        <th class="text-white py-2 fw-bold">Caste</th>
                        @*<th class="text-white py-2 fw-bold">Sector</th>
                        <th class="text-white py-2 fw-bold">Sector Sanyojak</th>*@
                        <th class="text-white py-2 fw-bold">Total Votes</th>
                        <th class="text-white py-2 fw-bold">Senior Citizen</th>
                        <th class="text-white py-2 fw-bold">Handicap</th>
                        <th class="text-white py-2 fw-bold">Double Votes</th>
                        <th class="text-white py-2 fw-bold">Pravasi</th>
                        <th class="text-center text-white" style="text-align:center!important;">View</th>
                        @*<th class="text-white py-2">Address</th>
                        <th class="text-white py-2">Education</th>

                        <th class="text-white py-2">ProfileImage</th>*@

                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var data in Model)
                        {
                            <tr class=" align-middle" id="row_@data.Booth_Id">


                                @*<td class="py-2">@</td>*@
                                <td class="py-2" style="text-align:center!important;">@data.BoothNo</td>
                                @*<td class="py-2">@data.PollingStationBoothName</td>*@
                                <td class="py-2" style="text-align:left!important;">@data.BoothName</td>
                                <td class="py-2" style="text-align:left!important;">@data.InchargeName</td>
                                <td class="py-2" style="text-align:left!important;">@data.Mobile</td>
                                <td style="text-align:left!important;">
                                    @*@foreach (var village in @data.VillageNames ?? new List<string>())
                                    {
                                        @village <br />
                                    }*@
                                    @data.Village
                                </td>

                                @*<td class="py-2" style="text-align:left!important;">@data.FatherName</td>
                                <td class="py-2">@data.Age</td>*@

                                <td style="text-align:left!important;">@data.castname</td>
                                @*<td class="py-2">@data.SectorName</td>
                                <td class="py-2">@data.SectorIncName</td>*@
                                <td class="py-2" style="text-align:center!important;">@data.TotalVotes</td>
                                <td class="py-2" style="text-align:center!important;">@data.SeniorCitizen</td>
                                <td class="py-2" style="text-align:center!important;">@data.Handicap</td>
