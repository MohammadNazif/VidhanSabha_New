<script>
    $(document).ready(function () {

        // 🔹 URL se filters set karna (existing code)
        const urlParams = new URLSearchParams(window.location.search);
        const casteId = urlParams.get('casteIds') ? urlParams.get('casteIds').split(',') : [];
        const mandalId = urlParams.get('mandalIds') ? urlParams.get('mandalIds').split(',') : [];
        const sectorId = urlParams.get('sectorIds') ? urlParams.get('sectorIds').split(',') : [];
        const villageId = urlParams.get('villageIds') ? urlParams.get('villageIds').split(',') : [];

        $('#casteFilter').val(casteId).trigger('change');
        $('#mandalFilter').val(mandalId).trigger('change');
        $('#sectorFilter').val(sectorId).trigger('change');
        $('#villageFilter').val(villageId).trigger('change');

        // 🔹 Initialize Select2 dropdowns
        $('#casteFilter').select2({ placeholder: "Select Caste" });
        $('#mandalFilter').select2({ placeholder: "Select Mandal" });
        $('#sectorFilter').select2({ placeholder: "Select Sector" });
        $('#villageFilter').select2({ placeholder: "Select Village" });

        // 🔹 Filter button
        $('#filterButton').on('click', function () {
            var selectedCaste = $('#casteFilter').val();
            var selectedMandal = $('#mandalFilter').val();
            var selectedSector = $('#sectorFilter').val();
            var selectedVill = $('#villageFilter').val();

            if ((!selectedCaste || selectedCaste.length === 0) &&
                (!selectedVill || selectedVill.length === 0) &&
                (!selectedMandal || selectedMandal.length === 0) &&
                (!selectedSector || selectedSector.length === 0)) {

                Swal.fire({
                    icon: 'warning',
                    title: 'No filter selected',
                    text: 'Please select at least one mandal or sector or caste or village to filter data.',
                    confirmButtonText: 'OK'
                });
                return;
            }

            const url = `${window.location.pathname}?mandalIds=${selectedMandal}&casteIds=${selectedCaste}&villageIds=${selectedVill}&sectorIds=${selectedSector}`;
            window.location.href = url;
        });

        // 🔹 Reset Filters
        $('#resetFilters').click(function () {
            $('#mandalFilter').val('').trigger('change');
            $('#casteFilter').val('').trigger('change');
            $('#villageFilter').val('').trigger('change');
            $('#sectorFilter').val('').trigger('change');
            window.location.href = window.location.pathname;
        });



    });
</script>
