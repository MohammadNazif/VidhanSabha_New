<script>
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);

        const casteId = urlParams.get('casteIds') ? urlParams.get('casteIds').split(',') : [];
        const mandalId = urlParams.get('mandalIds') ? urlParams.get('mandalIds').split(',') : [];
        const sectorId = urlParams.get('sectorIds') ? urlParams.get('sectorIds').split(',') : [];
        const villageId = urlParams.get('villageIds') ? urlParams.get('villageIds').split(',') : [];
        const boothNo = urlParams.get('boothIds') ? urlParams.get('boothIds').split(',').map(String) : []; // ✅ FIXED

        $('#casteFilter').val(casteId).trigger('change');
        $('#mandalFilter').val(mandalId).trigger('change');
        $('#sectorFilter').val(sectorId).trigger('change');
        $('#villageFilter').val(villageId).trigger('change');
        $('#boothFilter').val(boothNo).trigger('change'); // ✅ now works

        $('#casteFilter').select2({ placeholder: "Select Caste" });
        $('#mandalFilter').select2({ placeholder: "Select Mandal" });
        $('#sectorFilter').select2({ placeholder: "Select Sector" });
        $('#villageFilter').select2({ placeholder: "Select Village" });
        $('#boothFilter').select2({ placeholder: "Select Booth No." });

        $('#filterButton').on('click', function () {
            var selectedCaste = $('#casteFilter').val();
            var selectedMandal = $('#mandalFilter').val();
            var selectedSector = $('#sectorFilter').val();
            var selectedVill = $('#villageFilter').val();
            var selectedBooth = $('#boothFilter').val();

            if ((!selectedCaste || selectedCaste.length === 0) &&
                (!selectedVill || selectedVill.length === 0) &&
                (!selectedMandal || selectedMandal.length === 0) &&
                (!selectedSector || selectedSector.length === 0) &&
                (!selectedBooth || selectedBooth.length === 0)) {

                Swal.fire({
                    icon: 'warning',
                    title: 'No filter selected',
                    text: 'Please select at least one mandal or sector or caste or village to filter data.',
                    confirmButtonText: 'OK'
                });
                return;
            } else {
                const url = `${window.location.pathname}?mandalIds=${selectedMandal}&casteIds=${selectedCaste}&villageIds=${selectedVill}&sectorIds=${selectedSector}&boothIds=${selectedBooth}`;
                window.location.href = url;
            }
        });

        $('#resetFilters').click(function () {
            $('#mandalFilter, #casteFilter, #villageFilter, #sectorFilter, #boothFilter').val('').trigger('change');
            window.location.href = window.location.pathname;
        });
    });

</script>


<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 310
            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Admin/CombinedSectorReports?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#myTable')) {
                $('#myTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>


