<div class="container-fluid mt-5 m-3">
    <div class="d-flex justify-content-between mb-2 ">
        <h3 style="color: #FF8C42;">Booth Management</h3>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createSectorModal">Create</button>
    </div>

    <div class="table-wrapper shadow rounded P-2" id="tableWrapper">
        <div class="table-controls">
            <div id="entriesAndExport"></div>
            <div id="searchBox"></div>
        </div>

        <div class="  " style="white-space:nowrap!important;">

            <table id="myTable" class="table table-responsive-lg table-hover table-bordered align-middle">


                <thead class="table-head">
                    <tr class="myhead">

                        <th class="text-white" style="min-width: 5px !important">Booth No</th>
                        <th class="text-white">Mandal</th>
                        <th class="text-white">Sector Name</th>
                        <th class="text-white">Village</th>
                        @*<th class="text-white">Booth Name</th>*@
                        <th class="text-white">Polling Station</th>
                        <th class="text-white">Booth Adhyaksh</th>
                        <th class="text-white">Contact</th>
                        <th class="text-white">Caste</th>
                        <th class="text-white">Profile Image</th>
                        <th class="text-white">Location</th>
                        <th class="text-white">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var data in Model)
                    {
                        <tr class="text-center align-middle text-white">

                            <td style="text-align:center!important;min-width:5px!important">@data.BoothNumber</td>
                            <td>@data.MandalName</td>
                            <td>@data.SectorName</td>
                            <td>@Html.Raw(string.Join(",<br>", data.VillageNames))</td>

                            @*<td style="text-align:center!important;">@data.VillageNames</td>*@
                            @*<td>@data.PollingStationBoothName</td>*@
                            <td>@data.BoothName</td>
                            <td>@data.InchargeName</td>
                            <td>@data.PhoneNumber</td>
                            <td style="text-align:left">@data.SubCasteName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(data.ProfileImage))
                                {
                                    <img src="@Url.Content(data.ProfileImage)" class="img-thumbnail"
                                         style="max-width:50px; max-height:50px;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            @using System.Net

                            <td class="text-center">
                                <a href="https://www.google.com/maps/search/?api=1&query=@(WebUtility.UrlEncode(data.boothLocation))"
                                   target="_blank" rel="noopener noreferrer" title="Open in Google Maps">
                                    <i class="fa fa-map-marker-alt" style="font-size:18px;"></i>
                                </a>
                            </td>



                            <td>
                                <!-- Edit button -->
                                <button class="edit-btn btn " data-id="@data.Booth_Id">
                                    <i class="fas fa-edit text-success"></i>
                                </button>


                                <!-- Delete button -->
                                <button type="button" class="btn btn-sm  me-1 delete-btn" data-id="@data.Booth_Id">
                                    <i class="fas fa-trash-alt delete-icon"></i>
                                </button>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>

    </div>

</div>
<!-- Modal -->
<div class="modal fade" id="createSectorModal" tabindex="-1" aria-labelledby="createSectorLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg ">
        <div class="modal-content">
            <form id="boothForm" enctype="multipart/form-data">
                <div class="modal-header bg-orange text-white position-sticky top-0 z-3 shadow-sm table-head ">
                    <div>
                        <h5 class="modal-title text-white text-center" id="createSectorLabel">Create New Booth</h5>
                    </div>

                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body row g-0">

                    <input type="hidden" name="Booth_Id" id="Booth_Id" value="0" />


                    <div class="col-md-6">
                        <label>Mandal</label>
                        <select class="form-select" id="mandalDropdown" name="Mandal_Id">

                            <option disabled selected>Select Mandal</option>

                        </select>
                    </div>



                    <!-- Sector Dropdown -->
                    <div class="col-md-6">
                        <label>Sector</label>
                        <select class="form-select" name="sector_Id" id="sectorDropdown">
                            <option disabled selected>Select Mandal First</option>
                        </select>
                    </div>


                    <div class="col-md-6">
                        <label>Village</label>
                        <select class="form-select js-example-basic-multiple" name="Village" id="Village" multiple="multiple">
                            @*<option disabled >--Select Village--</option>*@
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label>Booth Number</label>
                        <input type="text" class="form-control" name="BoothNumber" placeholder="Enter Booth number (e.g., 12)" required>
                    </div>

                    @*<div class="col-md-6">
                            <label>Booth Name</label>
                            <input type="text" class="form-control" name="PollingStationBoothName" placeholder="Enter Booth Name">
                        </div>*@

                    <div class="col-md-6">
                        <label>Polling Station</label>
                        <input type="text" class="form-control" name="BoothName" placeholder="Enter Polling Station (e.g., North Zone)">
                    </div>



                    <div class="col-md-6">
                        <label>Polling Station Location</label>
                        <input type="text" class="form-control" name="boothLocation" placeholder="Enter Polling Station Location ">
                    </div>

                    <div class="col-md-6">
                        <label>Booth Incharge?</label>
                        <select class="form-select modal-incharge-select" name="BoothInchargeName">
                            <option value="0">No</option>
                            <option value="1">Yes</option>
                        </select>
                    </div>


                    <!-- Additional Fields (Initially Hidden) -->
                    <div class="modal-additional d-none row g-2">
                        <div class="col-md-4">
                            <label>InchargeName</label>
                            <input type="text" class="form-control" name="InchargeName" placeholder="Inchargename">
                        </div>

                        <div class="col-md-2">
                            <label>Age</label>
                            <input type="number" class="form-control" name="Age" placeholder="age">
                        </div>

                        <div class="col-md-6">
                            <label>Father Name</label>
                            <input type="text" class="form-control" name="FatherName" placeholder="Enter father's full name">
                        </div>
                        <div class="col-md-6">
                            <label for="categorySelect" class="form-label">Category</label>
                            <select id="categorySelect" class="form-select" name="CasteId">
                                <option value="">-- Select Category --</option>
                                @foreach (var cat in ViewData["CategoryList"] as List<VishanSabha.Models.Caste>)
                                {
                                    <option value="@cat.Caste_Id">@cat.CasteName</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label for="subCasteSelect" class="form-label">Caste</label>
                            <select id="subCasteSelect" class="form-select modal-subcaste-select" name="subcaste">
                                <option value="">Caste</option>
                            </select>
                        </div>



                        <div class="col-md-6">
                            <label>Education Level</label>
                            <input type="text" class="form-control" name="Education" placeholder="Enter highest education (e.g., B.A., 12th)">
                        </div>

                        <div class="col-md-6">
                            <label>Phone Number</label>
                            <input type="tel" class="form-control" name="PhoneNumber" placeholder="Enter 10-digit mobile number">
                        </div>

                        <div class="col-md-6">
                            <label for="address">Address</label>
                            <textarea id="address" class="form-control" name="Address" placeholder="Enter full address with landmark"></textarea>
                        </div>

                        <div class="col-md-6">
                            <label for="profileImage">Profile Image</label>
                            <input type="file" id="profileImage" name="ProfileImage" class="form-control" />
                        </div>
                    </div>
                    <div class="col-12 mt-3" id="villageTableContainer">
                        <!-- Table will be added here dynamically -->
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn  btn-primary">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
