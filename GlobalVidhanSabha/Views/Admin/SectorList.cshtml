<script>
    $(document).on("click", ".profileModal", function () {
        var sectorId = $(this).data("sectorid");

        $.ajax({
            url: '/Admin/GetInchargeDetailBySecId',
            type: 'GET',
            data: { sectorId: sectorId },
            success: function (data) {
                if (data && data.length > 0) {
                    var d = data[0]; // Expecting single Inchargeper sector

                    var profileImage = d.ProfileImage ? d.ProfileImage : '/Content/Images/user.jpg';
                    var html = `
                    <div class="row g-3">
                        <!-- Profile Image (Left) -->
                        <div class="col-md-4 text-center border-end">
                            <div class="position-relative d-inline-block">
                                <img src="${profileImage}" class="rounded-circle border border-3 shadow-sm mb-3"
                                     alt="Profile" width="120" height="120" style="border-color:#fd7e14;">
                                <span class="position-absolute bottom-0 end-0 bg-success rounded-circle border border-white"
                                      style="width:12px; height:12px;"></span>
                            </div>
                            <h5 class="fw-bold mt-2" style="font-size: 16px;">${d.InchargeName || ''}</h5>
                            <small class="text-muted" style="font-size: 13px;">Sector Sanyojak</small>
                        </div>

                        <!-- Profile Details (Right) -->
                        <div class="col-md-8">
                            <div class="row row-cols-2 g-4" style="font-size: 14px;">
                                <div class="col"><strong>Mandal Name:</strong> ${d.MandalName || ''}</div>
                                <div class="col"><strong>Sector Name:</strong> ${d.SectorName || ''}</div>

                                <div class="col"><strong>InchargeName:</strong> ${d.InchargeName || ''}</div>
                                <div class="col"><strong>Father's Name:</strong> ${d.FatherName || ''}</div>
                                <div class="col"><strong>Phone:</strong> ${d.PhoneNumber || ''}</div>
                                <div class="col"><strong>Age:</strong> ${d.Age || ''}</div>
                                <div class="col"><strong> Category:</strong> ${d.CasteCategoryName || ''}</div> <!-- Caste -->
                                <div class="col"><strong>Caste:</strong> ${d.SubCasteName || ''}</div> <!-- Subcaste -->
                                <div class="col"><strong>Address:</strong> ${d.Address || ''}</div>
                                <div class="col"><strong>Education:</strong> ${d.Education || ''}</div>
                                <div class="col"><strong>Userid:</strong> ${d.Contact || ''}</div>
                                <div class="col"><strong>Password:</strong> ${d.Password || ''}</div>
                            </div>
                        </div>
                    </div>`;

                    $("#profileModal .modal-body").html(html);
                    $("#profileModal").modal('show');
                } else {
                    $("#profileModal .modal-body").html("<p class='text-muted text-center'>No details found.</p>");
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'warning',
                    title: 'Warning',
                    text: 'Some error occurred!',
                    didClose: () => location.reload(true)
                });
            }
        });
    });
</script>




<script>
    $(document).on("click", ".openBoothModal", function () {
        var sectorId = $(this).data("sectorid");

        debugger
        $("#boothTable tbody").empty();

        $.ajax({
            url: '/Admin/GetBoothsBySector',
            type: 'GET',
            data: { sectorId: sectorId },
            success: function (data) {
                debugger
                $("#boothTable tbody").empty();

                if (data && data.length > 0) {

                    $.each(data, function (i, booth) {
                        $("#boothTable tbody").append(`
                <tr>
                    <td style="width:10px!important">${i + 1}</td>
                    <td style="text-align:left">${booth.BoothName}</td>
                    <td >${booth.BoothNumber}</td>
                    <td style="text-align:left">${booth.InchargeName}</td>
                    <td style="text-align:left">${booth.Address}</td>
                    <td style="text-align:left">${booth.PhoneNumber}</td>
                    <td><img src="${booth.ProfiileImage}" height="50px" width="50px"/></td>
                </tr>
            `);
                    });
                } else {

                    $("#boothTable tbody").append(`
            <tr>
                <td colspan="7" class="text-center">No Data Available</td>
            </tr>
        `);
                }

                $("#boothModal").modal('show')
            },

            error: function (status, xhr) {
                console.log(status, xhr);
                Swal.fire({
                    icon: 'warning',
                    title: 'warning',
                    text: 'Some Error Occured!!',
                    didClose: () => {
                        location.reload(true);
                    }
                });
                //alert("Failed to load booth data.");
            }
        });
    });

</script>