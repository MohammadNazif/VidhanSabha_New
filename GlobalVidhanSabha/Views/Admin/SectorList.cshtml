
@{
    ViewBag.Title = "SectorList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var SectorList = ViewData["SectorList"] as List<VishanSabha.Models.Sector>;
}


<style>
    body {
        font-family: "Poppins", sans-serif !important;
    }

    .table thead th {
        background-color: #FF8C42;
        color: white;
        height: 40px !important;
    }

    .table {
        background-color: white;
    }



    .dataTables_length {
        margin-bottom: 0px !important;
    }

    .custom-modal-width {
        max-width: 60% !important;
    }


    #boothTable tbody tr {
        height: 20px;
        text-align: center !important;
    }

    #boothTable thead tr {
        text-align: center !important;
        font-size: 15px;
        font-weight: normal;
    }

    #boothTable td {
        padding: 4px 8px;
        font-size: 11px;
    }

    #boothTable th,
    #boothTable td {
        padding: 4px 6px;
        font-size: 13px;
        line-height: 1.2;
    }

    #myTable th,
    #myTable td {
        padding: 1px 4px;
        font-size: 11px;
        vertical-align: middle !important;
    }

    .profileModals {
        max-width: 65% !important;
    }

    #myTable .caste-col {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_length {
        margin: 0;
        padding: 0;
    }

    #myTable th.col-col,
    #myTable td.col-col {
        width: 140px;
        white-space: nowrap;
        text-align: left; /* left align */
    }
</style>

<div class="container-fluid my-5 mt-5 m-3">
    <div class="row g-2">
        <div class="table-responsive shadow rounded p-3">
            <table class="table table-hover table-bordered align-middle" id="myTable">
                <thead class="text-center">
                    <tr>
                        <th>S.N.</th>
                        <th>Sector Name</th>
                        <th>Sector Sanyojak</th>
                        <th>Total Booth</th>
                        <th>Contact</th>
                        <th>Caste</th>
                        <th style="min-width:150px;">Address</th>
                        <th style="min-width:5px;">Profile</th>
                        <th style="min-width:2px;">View</th>
                    </tr>
                </thead>

                <tbody class="text-center">
                    @if (SectorList != null && SectorList.Any())
                    {
                        int i = 1;
                        foreach (var data in SectorList)
                        {
                            <tr>
                                <td>@i</td>
                                <td style="text-align:left!important;">@data.SectorName</td>
                                <td style="text-align:left!important;">@data.InchargeName</td>
                                <td style="text-align:center!important;">
                                    <a href="#" data-sectorid="@data.Id" class="openBoothModal">@data.TotalBooth</a>
                                </td>
                                <td style="text-align:left;">@data.PhoneNumber</td>
                                <td style="text-align:left;">@(data.SubCasteName!=null?data.SubCasteName.Trim():"")</td>
                                <td style="text-align:left;">@data.Address</td>
                                <td>
                                    <img src="@data.ProfileImage" height="40" width="40" />
                                </td>
                                <td>
                                    <a href="#" data-sectorid="@data.Id" class="profileModal">
                                        <i class="fa fa-info-circle fa-sm text-primary"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


