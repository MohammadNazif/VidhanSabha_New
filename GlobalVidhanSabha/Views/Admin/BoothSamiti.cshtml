<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>


<script>

    $(document).ready(function () {



    // Initialize modals once
    const createModal = new bootstrap.Modal(document.getElementById('createBoothSamitiModal'));
    const inchargeModal = new bootstrap.Modal(document.getElementById('createBoothIncharge'));
    const viewModal = new bootstrap.Modal(document.getElementById('viewBoothSamitiModal'));

    // Create Booth Inchargebutton click
    $('#mainCreateBtn').click(function () {
        $('#BoothInchargeform').attr('data-mode', 'create')[0].reset();
        $('#BoothIdDropdown, #boothIncharge').val('');
        $('#createBoothInchargeLabel').text('Create Booth Incharge');
        inchargeModal.show();
    });

    // Create Booth Samiti button click
    $(document).on('click', '.createBoothSamitiBtn', function () {
        $('#boothSamitiForm').attr('data-mode', 'create')[0].reset();
        $('#BoothSamiti_Id, #designationDropdown, #Category').val('');
        $('#Cast').html('<option value="">-- Select Caste --</option>');
        $('#nameFieldContainer').hide();
        $('#extraFields').hide();
        $('#boothIdHidden').val($(this).data('boothid'));
        $('#createBoothSamitiLabel').text('Create Booth Samiti for ' + $(this).data('boothname'));
        createModal.show();
    });

    // View Booth Samiti button click - load and show modal
    $(document).on('click', '.viewBoothSamitiBtn', function () {
        const boothId = $(this).data('boothid');
        $('#viewBoothSamitiLabel').text('Members of ' + $(this).data('boothname'));
        $('#viewBoothSamitiContent').html('<p class="text-center">Loading...</p>');

        $.ajax({
            url: '@Url.Action("GetAllBoothSamiti", "Admin")',
            type: 'GET',
            data: { boothId: boothId },
            success: function (response) {
                if (response.success && response.data.length > 0) {
                    let tableHtml = `
                        <div class="table-responsive shadow rounded p-3">
                            <table class="table table-bordered table-view table-hover">
                                <thead class="table-head">
                                    <tr>
                                        <th>S.N.</th>
                                        <th style="text-align:left">Name</th>
                                        <th style="text-align:left" >Designation</th>
                                        <th style="text-align:left">Contact</th>
                                        <th style="text-align:left">Age</th>
                                        <th style="text-align:left">Occupation</th>
                                        <th style="text-align:left">Category</th>
                                        <th style="text-align:left">Caste</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                    `;
                    response.data.forEach((item, index) => {
                        tableHtml += `
                            <tr>
                                <td class="text-center">${index + 1}</td>
                                <td class="text-left">${item.Name}</td>
                                <td class="text-left">${item.Designation}</td>
                                <td class="text-left">${item.Mobile}</td>
                                <td class="text-center">${item.Age}</td>
                                <td class="text-left">${item.Occupation}</td>
                                <td class="text-left">${item.CategoryName ?? ''}</td>
                                <td class="text-left">${item.SubCasteName ?? ''}</td>
                                <td>
                                    <button type="button" class="btn btn-xs  me-1 edit-btn" data-id="${item.BoothSamiti_Id}" title="Edit">
                                        <i class="fas fa-edit edit-icon"></i>
                                    </button>
                                    <button type="button" class="btn btn-xs   me-1 delete-btn" data-id="${item.BoothSamiti_Id}" title="Delete">
                                        <i class="fas fa-trash-alt delete-icon"></i>
                                    </button>
                                </td>
                            </tr>
                        `;
                    });
                    tableHtml += `</tbody></table></div>`;
                    $('#viewBoothSamitiContent').html(tableHtml);
                } else {
                    $('#viewBoothSamitiContent').html('<p class="text-muted text-center">No members found for this booth.</p>');
                }
            },
            error: function () {
                $('#viewBoothSamitiContent').html('<p class="text-danger text-center">Error loading data.</p>');
            }
        });

        viewModal.show();
    });

    // Submit Booth Samiti form (create/edit)
    $('#boothSamitiForm').submit(function (e) {
        e.preventDefault();
        $.post('@Url.Action("SaveBoothSamiti", "Admin")', $(this).serialize(), function (resp) {
            Swal.fire({
                icon: resp.success ? 'success' : 'error',
                title: resp.success ? 'Success' : 'Error',
                text: resp.message,
                timer: resp.success ? 1500 : undefined,
                showConfirmButton: true
            }).then(() => {
                if (resp.success) location.reload();
            });
        }).fail(() => {
            Swal.fire('Error', 'An error occurred while saving the Booth Samiti.', 'error');
        });
    });

    // Designation dropdown toggle
    $('#designationDropdown').change(function () {
        $(this).val() ? $('#nameFieldContainer').slideDown() : $('#nameFieldContainer').slideUp();
    });

    // Category change loads caste dropdown
    $('#Category').change(function () {
        const id = $(this).val();
        const castDropdown = $('#Cast');
        if (id) {
            $.get('/Admin/GetSubcasteByCategory', { id }, data => {
                castDropdown.empty().append('<option value="">-- Select Caste --</option>');
                data.forEach(item => {
                    castDropdown.append(`<option value="${item.SubCaste_Id}">${item.SubCasteName}</option>`);
                });
            }).fail(() => {
                Swal.fire('Error', 'Failed to load castes.', 'error');
            });
        } else {
            castDropdown.html('<option value="">-- Select Caste --</option>');
        }
    });

    // Booth dropdown change fetches incharge
    $('#BoothIdDropdown').change(function () {
        const id = $(this).val();
        if (id) {
            $.get('@Url.Action("GetBoothIncharge", "Admin")', { boothId: id }, resp => {
                resp.success ? $('#boothIncharge').val(resp.incharge) : Swal.fire('Warning', resp.message, 'warning');
            }).fail(() => {
                Swal.fire('Error', 'Failed to fetch Booth Incharge.', 'error');
            });
        } else {
            $('#boothIncharge').val('');
        }
    });

    // Submit Booth Inchargeform
    $('#BoothInchargeform').submit(function (e) {
        e.preventDefault();
        $.post('@Url.Action("SaveBoothIncharge", "Admin")', $(this).serialize(), resp => {
            Swal.fire({
                icon: resp.success ? 'success' : 'error',
                title: resp.success ? 'Success' : 'Error',
                text: resp.message,
                timer: resp.success ? 1500 : undefined,
                showConfirmButton: true
            }).then(() => {
                if (resp.success) location.reload();
            });
        }).fail(_ => {
            Swal.fire('Error', 'Could not connect to server.', 'error');
        });
    });

        // Edit button click - fetch data, hide view modal, show create/edit modal
    $(document).on('click', '.edit-btn', function () {
    var id = $(this).data('id');
    $.ajax({
        url: '@Url.Action("GetBoothSamitiByid", "Admin")',
        type: 'GET',
        data: { id: id },
        success: function (response) {
            if (response.success) {
                var data = response.data;
                console.log(data);

                $('#boothSamitiForm').attr('data-mode', 'edit')[0].reset();
                $('#createBoothSamitiLabel').text('Edit Booth Samiti');
                $('#BoothSamiti_Id').val(data.BoothSamiti_Id);
                $('#boothIdHidden').val(data.BoothId);

                // 🔹 Fetch designations for the booth before setting value
                $.ajax({
                    url: '/Admin/GetAvailableDesignations',
                    type: 'GET',
                    data: { boothId: data.BoothId },
                    success: function (designations) {
                        const $dropdown = $('#designationDropdown');
                        $dropdown.empty().append('<option value="">-- Select Designation --</option>');

                        designations.forEach(item => {
                            if (item.disabled) {
