<div class="modal fade" id="createBoothSamitiModal" tabindex="-1" aria-labelledby="createBoothSamitiLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <form id="boothSamitiForm" method="post" data-mode="create">
                <input type="hidden" name="BoothSamiti_Id" id="BoothSamiti_Id" />
                <input type="hidden" name="BoothId" id="boothIdHidden" />

                <div class="modal-header table-head">
                    <h5 class="modal-title text-white fw-bold" id="createBoothSamitiLabel">Create Booth Samiti</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <div class="row g-1">
                        <div class="col-md-6">
                            <label>Designation</label>
                            <select name="DesignationId" id="designationDropdown" class="form-select form-select-sm" required>
                                <option value="">-- Select Designation --</option>
                            </select>

                        </div>

                        <div id="nameFieldContainer" style="display: none; width: 100%;">
                            <div class="row g-1">
                                <div class="col-md-6">
                                    <label>Name</label>
                                    <input type="text" name="Name" class="form-control form-control-sm" placeholder="Enter Name" />
                                </div>
                                <div class="col-md-6">
                                    <label>Category</label>
                                    <select class="form-select form-select-sm" id="Category" name="Category">
                                        <option value="">-- Select Category --</option>
                                        @if (CategoryList?.Any() == true)
                                        {
                                            foreach (var data in CategoryList)
                                            {
                                                <option value="@data.Caste_Id">@data.CasteName</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="row g-1 mt-2">
                                <div class="col-md-6">
                                    <label>Caste</label>
                                    <select class="form-select form-select-sm" id="Cast" name="Cast">
                                        <option value="">-- Select Caste --</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label>Age</label>
                                    <input type="number" name="Age" class="form-control form-control-sm" placeholder="Enter Age" />
                                </div>
                            </div>

                            <div class="row g-1 mt-2">
                                <div class="col-md-6">
                                    <label>Contact</label>
                                    <input type="tel" name="Mobile" class="form-control form-control-sm" placeholder="Enter Contact Number" maxlength="10" />
                                </div>
                                <div class="col-md-6">
                                    <label>Occupation</label>
                                    <input type="text" name="Occupation" class="form-control form-control-sm" placeholder="Enter Occupation" />
                                </div>
                            </div>
                        </div>
                    </div>
