<script>
    function formatDate(dotNetDateStr) {
        if (!dotNetDateStr) return '-';
        const match = /\/Date\((\d+)\)\//.exec(dotNetDateStr);
        if (!match) return '-';
        const date = new Date(parseInt(match[1]));
        return `${String(date.getDate()).padStart(2, '0')}-${String(date.getMonth() + 1).padStart(2, '0')}-${date.getFullYear()}`;
    }

    function parseDotNetDate(dotNetDateStr) {
        if (!dotNetDateStr) return '';
        const match = /\/Date\((\d+)\)\//.exec(dotNetDateStr);
        if (!match) return '';
        const date = new Date(parseInt(match[1]));
        return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')}`;
    }

    $(document).ready(function () {

        function loadActivities() {
            $.get('@Url.Action("GetAllActivities", "Admin")', function (data) {
                const tbody = $('#myTable tbody').empty();
                let i = 1;
                data.forEach(item => {
                    const images = item.ImagePaths?.length
                        ? `<i class="fa fa-eye text-primary view-images-btn" role="button" title="View Images" data-images='${JSON.stringify(item.ImagePaths)}' data-id="${item.ActivityId}"></i>`
                        : '-';

                    const video = item.VideoUrl
                        ? `<a href="${item.VideoUrl}" target="_blank"><i class="fa fa-video text-danger"></i></a>`
                        : '-';

                    tbody.append(`
                        <tr>
                            <td>${i++}</td>
                            <td class="text-start">${item.Title}</td>
                            <td class="text-start">${item.Description}</td>
                            <td class="text-start">${formatDate(item.ActivityDate)}</td>
                            <td class="text-center"style="width:70px!Important">${images}</td>
                            <td class="text-center">${video}</td>
                            <td class="text-center">
                                <button class="btn btn-xs co edit-btn" data-id="${item.ActivityId}" data-bs-toggle="modal" data-bs-target="#activityModal"><i class="text-success fa fa-edit"></i></button>
                                <button class="btn btn-xs  delete-btn" data-id="${item.ActivityId}"><i class="text-danger fa fa-trash"></i></button>
                            </td>
                        </tr>
                    `);
                });
            });
        }

        loadActivities();

        $('#openCreateModal').click(() => {
            $('#activityForm')[0].reset();
            $('#ActivityId').val('');
            $('#uploadImagesWrapper').show();
            $('#Images').prop('required', true);
            $('#existingImages').empty();
            $('#activityModalLabel').text('Create New Activity');
        });

 $(document).on('click', '.edit-btn', function () {
    const id = $(this).data('id');
    $.get('@Url.Action("GetActivityById", "Admin")', { id }, function (item) {
        $('#ActivityId').val(item.ActivityId);
        $('[name="Title"]').val(item.Title);
        $('[name="ActivityDate"]').val(parseDotNetDate(item.ActivityDate));
        $('[name="Description"]').val(item.Description);
        $('[name="VideoUrl"]').val(item.VideoUrl);
        $('#activityModalLabel').text('Update Activity');

        const existingImagesCount = item.ImagePaths ? item.ImagePaths.length : 0;

        if (existingImagesCount >= 4) {
            $('#Images').prop('disabled', true).val(''); // Disable upload and clear input
        } else {
            $('#Images').prop('disabled', false).val('');
            $('#Images').attr('data-max-files', 4 - existingImagesCount); // Store max allowed files
        }

        $('#uploadImagesWrapper').show();
    });
 });
        $('#Images').on('change', function () {
            const maxAllowed = parseInt($(this).attr('data-max-files')) || 4;
            if (this.files.length > maxAllowed) {
                Swal.fire('Limit Exceeded', `You can only upload up to ${maxAllowed} images.`, 'warning');
                this.value = ''; // reset input
            }
        });

        $('#activityForm').submit(function (e) {
            e.preventDefault();
            const formData = new FormData(this);

            $.ajax({
                url: '@Url.Action("SaveActivity", "Admin")',
                method: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (res) {
                    if (res.success) {
                        Swal.fire('Success', res.message, 'success').then(() => {
                            location.reload();  // reload entire page
                        });
                        $('#activityModal').modal('hide');
                        loadActivities();
                    } else {
                        Swal.fire('Error', res.message, 'error');
                    }
                },
                error: () => Swal.fire('Error', 'Unexpected error.', 'error')
            });
        });

        $(document).on('click', '.delete-btn', function () {
            const id = $(this).data('id');
            Swal.fire({
                title: 'Are you sure?',
                text: "This will soft delete the activity.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!'
            }).then(result => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("DeleteActivities", "Admin")', { id }, function (res) {
                        if (res.success) {
                            Swal.fire('Deleted!', res.message, 'success');
                            loadActivities();
                        } else {
                            Swal.fire('Error', res.message, 'error');
                        }
                    });
                }
            });
        });

        $('#Images').on('change', function () {
            if (this.files.length > 4) {
                Swal.fire('Limit Exceeded', 'You can only upload up to 4 images.', 'warning');
                this.value = '';
            }
        });
    });

    // View Images with Delete Option
    $(document).on('click', '.view-images-btn', function () {
        const imageList = JSON.parse($(this).attr('data-images'));
        const activityId = $(this).data('id');
        const container = $('#imageGrid').empty();
        const modalDialog = $('#imageViewerModal .modal-dialog');

        modalDialog.css({ 'max-width': '', 'width': '', 'height': '', 'max-height': '' });

        if (imageList.length === 1) {
            modalDialog.css({ 'max-width': '400px', 'width': '90%' });
            container.append(`
                <div class="col-12 text-center image-box position-relative">
                    <img src="${imageList[0]}" class="img-fluid rounded shadow-sm border"
                        style="object-fit: contain; max-height: 400px; width: auto; max-width: 100%;"
                        onerror="this.style.display='none'" />
                    <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 delete-image-btn"
                        data-url="${imageList[0]}" data-id="${activityId}" title="Delete Image">&times;</button>
                </div>
            `);
            $('#imageViewerModal .modal-body').css({ 'max-height': 'none', 'overflow-y': 'visible' });
        } else {
            modalDialog.css({ 'max-width': '700px', 'width': '90%' });

            imageList.forEach(url => {
                container.append(`
                    <div class="col-md-4 col-sm-6 mb-3 image-box position-relative">
                        <img src="${url}" class="img-fluid rounded shadow-sm border"
                            style="object-fit: cover; width: 100%; height: 150px;"
                            onerror="this.style.display='none'" />
                        <button class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 delete-image-btn"
                            data-url="${url}" data-id="${activityId}" title="Delete Image">&times;</button>
                    </div>
                `);
            });

            $('#imageViewerModal .modal-body').css({ 'max-height': '75vh', 'overflow-y': 'auto' });
        }

        $('#imageViewerModal').modal('show');
    });

    // Delete Image from Modal
    $(document).on('click', '.delete-image-btn', function () {
        const imageUrl = $(this).data('url');
        const activityId = $(this).data('id');
        const imageBox = $(this).closest('.image-box');

        Swal.fire({
            title: 'Delete this image?',
            text: 'This action cannot be undone.',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then(result => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("DeleteImage", "Admin")',
                    type: 'POST',
                    data: { imageUrl: imageUrl, activityId: activityId },
                    success: function (res) {
                        if (res.success) {
                            Swal.fire('Deleted!', res.message, 'success');
                            imageBox.remove();
                        } else {
                            Swal.fire('Error', res.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Something went wrong on delete.', 'error');
                    }
                });
            }
        });
    });
    $('#VideoUrl').on('input', function () {
        if ($(this).val().trim()) {
            $('#VideoFile').prop('disabled', true);
        } else {
            $('#VideoFile').prop('disabled', false);
        }
    });

    $('#VideoFile').on('change', function () {
        if (this.files.length > 0) {
            $('#VideoUrl').prop('disabled', true);
        } else {
            $('#VideoUrl').prop('disabled', false);
        }
    });
</script>


<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 150
            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Admin/GetAllActivities?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#myTable')) {
                $('#myTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>