<script>
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);

        // Split comma-separated values into arrays for multiple select
        const casteId = urlParams.get('casteIds') ? urlParams.get('casteIds').split(',') : [];
        const sectorId = urlParams.get('sectorIds') ? urlParams.get('sectorIds').split(',') : [];
        //const villageId = urlParams.get('villageIds') ? urlParams.get('villageIds').split(',') : []

        // Set values
        $('#casteFilter').val(casteId).trigger('change');
        $('#sectorFilter').val(sectorId).trigger('change');
        //$('#villageFilter').val(villageId).trigger('change');

        $('#casteFilter').select2({
            placeholder: "Select Caste"
        });
        $('#sectorFilter').select2({
            placeholder: "Select Sector"
        });
        //$('#villageFilter').select2({
        //    placeholder: "Select Village"
        //});
        $('#filterButton').on('click', function () {
            debugger
            var selectedCaste = $('#casteFilter').val();
            var selectedSector = $('#sectorFilter').val();
            //var selectedVill = $('#villageFilter').val();
            // Check if both are empty
            if ((!selectedCaste || selectedCaste.length === 0) &&
                (!selectedSector || selectedSector.length === 0)
            ) {

                Swal.fire({
                    icon: 'warning',
                    title: 'No filter selected',
                    text: 'Please select at least one sector or caste or village to filter data.',
                    confirmButtonText: 'OK'
                });

                return; // Stop further execution
            } else {

                const url = `${window.location.pathname}?casteIds=${selectedCaste}&sectorIds=${selectedSector}`;
                window.location.href = url;
            }
        });

        $('#resetFilters').click(function () {
            $('#casteFilter').val('');
            //$('#villageFilter').val('');
            $('#sectorFilter').val('');

            // Reload page with empty query string
            window.location.href = window.location.pathname;
        });
    })
</script>
<script>
    $(document).on('click', '.booth-link', function () {
        var sectorId = $(this).data('id');

        console.log(sectorId);

        $('#boothModal').modal('show');
        $('#boothDetails').html('<p class="text-center text-muted">Loading...</p>');

        $.ajax({
            url: '/Admin/BoothListBySectorId',
            type: 'GET',
            data: { sectorId: sectorId },
            success: function (response) {
                $('#boothDetails').html(response);
            },
            error: function () {
                $('#boothDetails').html('<p class="text-danger text-center">Error loading details.</p>');
            }
        });
    });
</script>



<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 320
            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
