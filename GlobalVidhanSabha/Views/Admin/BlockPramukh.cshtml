<div class="container-fluid mt-5 m-3">
    <div class="d-flex justify-content-between mt-2 mb-2">
        <h4 style="color: #FF8C42;">BlockPramukh</h4>

    </div>

    <div class="row">
        <div class="col-sm-2">
            <select class="form-select form-select-sm shadow-sm rounded-pill border-primary" multiple id="casteFilter">

                @if (casteList != null && casteList.Any())
                {
                    foreach (var data in casteList)
                    {
                        <option value="@data.SubCaste_Id">@data.SubCasteName</option>
                    }
                }
            </select>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-outline-secondary w-100 shadow-sm round-0" id="filterButton" title="Filters">
                <i class="bi bi-arrow-clockwise"></i> Filter
            </button>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-outline-secondary w-100 shadow-sm round-0" id="resetFilters" title="Reset Filters">
                <i class="bi bi-arrow-clockwise"></i> Reset Filter
            </button>
        </div>
    </div>


    <div class="table-wrapper shadow rounded p-2">

        <div class="table-controls ">
            <div id="entriesAndExport" class="d-flex align-items-center gap-2">
                <div id="exportIcons" class="d-flex align-items-center gap-1">

                    <a href="@Url.Action("BlockPramukhExportList", "Export", new { format = "excel" })"
                      <i class="bi bi-file-earmark-excel-fill"  style="font-size: 1.3rem; color: #1D6F42; cursor:pointer;"></i>
                     </a>

                    <a href="@Url.Action("BlockPramukhExportList", "Export", new { format = "pdf" })"
                      <i class="bi bi-file-earmark-pdf-fill"  style="font-size: 1.3rem; color: #D32F2F; cursor: pointer;"></i>
                    </a>
                </div>

            </div>
            <div id="searchBox"></div>
        </div>


        <div class="  " style="white-space:nowrap!important;">

            <table id="myTable" class="table table-responsive-lg table-hover table-bordered align-middle">


                <thead class="table-head">
                    <tr class="myhead">
                        <th style="width:10px">S.N.</th>
                        <th class="col-1">Block Name</th>
                        <th>Block Pramukh</th>
                        <th>Contact</th>
                        <th>Caste</th>
                        <th>Address</th>
                        <th>Occupation</th>
                        <th>ProfileImage</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int sn = 1;
                        foreach (var block in Model)
                        {
                            <tr>
                                <td>@sn</td>
                                <td class="text-start">@block.BlockName</td>
                                <td class="text-start">@block.InchargeName</td>
                                <td>@block.Contact</td>
                                <td class="text-start">@block.CasteName</td>
                                <td class="data-left">@block.Address</td>
                                <td class="text-start">@block.Occupation</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(block.ProfileImage))
                                    {
                                        <img src="@Url.Content(block.ProfileImage)" alt="ProfileImage" style="height:35px;width:35px" />
                                    }
                                </td>

                            </tr>
                            sn++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

