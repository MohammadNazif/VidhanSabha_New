<!--Filter Script-->
<script>
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);

        // Split comma-separated values into arrays for multiple select
        const casteId = urlParams.get('casteIds') ? urlParams.get('casteIds').split(',') : [];
        //const occuId = urlParams.get('occuIds') ? urlParams.get('occuIds').split(',') : [];

        // Set values
        $('#casteFilter').val(casteId).trigger('change');
        //$('#occupationFilter').val(occuId).trigger('change');

        $('#casteFilter').select2({
            placeholder: "Select Caste"
        });
        //$('#occupationFilter').select2({
        //    placeholder: "Select Occupation"
        //});

        $('#filterButton').on('click', function () {
            var selectedCaste = $('#casteFilter').val();
            //var selectedOccu = $('#occupationFilter').val();
            // Check if both are empty
            if (
                (!selectedCaste || selectedCaste.length === 0)
            ) {

                Swal.fire({
                    icon: 'warning',
                    title: 'No filter selected',
                    text: 'Please select at least one caste to filter data.',
                    confirmButtonText: 'OK'
                });

                return; // Stop further execution
            } else {

                const url = `${window.location.pathname}?casteIds=${selectedCaste}`;
                window.location.href = url;
            }
        });

        $('#resetFilters').click(function () {
            $('#casteFilter').val('');

            // Reload page with empty query string
            window.location.href = window.location.pathname;
        });
    })
</script>



<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 100,
                columnDefs: [
                    { targets: 0, width: "80px" },   // S.N.
                    //{ targets: 1, width: "120px" },  // Sector
                    //{ targets: 2, width: "140px" },  // Sector Sanyojak
                    { targets: 1, width: "80px" },    // Booth No
                    { targets: 2, width: "80px" },    // Booth No
                    { targets: 3, width: "80px" },    // Booth No
                    { targets: 4, width: "80px" },    // Booth No
                    // Booth No
                ]

            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Admin/BlockPramukh?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#myTable')) {
                $('#myTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>


