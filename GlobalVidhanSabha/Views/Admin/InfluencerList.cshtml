<script>
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);

        // Split comma-separated values into arrays for multiple select
        const boothNo = urlParams.get('boothIds') ? urlParams.get('boothIds').split(',') : [];
        const casteId = urlParams.get('casteIds') ? urlParams.get('casteIds').split(',') : [];
        //const desgId = urlParams.get('desgIds') ? urlParams.get('desgIds').split(',') : [];
        const occuId = urlParams.get('occuIds') ? urlParams.get('occuIds').split(',') : [];

        // Set values
        $('#boothFilter').val(boothNo).trigger('change');
        $('#casteFilter').val(casteId).trigger('change');
        //$('#designationFilter').val(desgId).trigger('change');
        $('#occupationFilter').val(occuId).trigger('change');

        $('#boothFilter').select2({
            placeholder: "Select Booth No."
        });

        $('#casteFilter').select2({
            placeholder: "Select Caste"
        });
        //$('#designationFilter').select2({
        //    placeholder: "Select Designation"
        //});
        $('#occupationFilter').select2({
            placeholder: "Select Occupation"
        });

        $('#filterButton').on('click', function () {
            debugger
            var selectedBooth = $('#boothFilter').val();
            var selectedCaste = $('#casteFilter').val();
            //var selectedDesg = $('#designationFilter').val();
            var selectedOccu = $('#occupationFilter').val();
            // Check if both are empty
            if ((!selectedBooth || selectedBooth.length === 0) &&
                (!selectedCaste || selectedCaste.length === 0) &&
                (!selectedOccu || selectedOccu.length === 0)
            ) {

                Swal.fire({
                    icon: 'warning',
                    title: 'No filter selected',
                    text: 'Please select at least one booth or caste or occupation to filter data.',
                    confirmButtonText: 'OK'
                });

                return; // Stop further execution
            } else {

                const url = `${window.location.pathname}?boothIds=${selectedBooth}&casteIds=${selectedCaste}&occuIds=${selectedOccu}`;
                window.location.href = url;
            }
        });

        $('#resetFilters').click(function () {
            $('#boothFilter').val('');
            $('#casteFilter').val('');
            $('#occupationFilter').val('');

            // Reload page with empty query string
            window.location.href = window.location.pathname;
        });
    })
</script>


<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 320,


            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Admin/InfluencerList?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#myTable')) {
                $('#myTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>
