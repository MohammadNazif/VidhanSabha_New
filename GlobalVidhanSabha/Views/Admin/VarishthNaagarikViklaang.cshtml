<script>
    $(document).ready(function () {
        const urlParams = new URLSearchParams(window.location.search);

        // Split comma-separated values into arrays for multiple select
        const boothNo = urlParams.get('boothIds') ? urlParams.get('boothIds').split(',') : [];
        const casteId = urlParams.get('casteIds') ? urlParams.get('casteIds').split(',') : [];
        const villageId = urlParams.get('villageIds') ? urlParams.get('villageIds').split(',') : []

        let type =  @Html.Raw(Json.Encode(ViewBag.Type));
        console.log('Type Of List',type);

        // Set values
        $('#boothFilter').val(boothNo).trigger('change');
        $('#casteFilter').val(casteId).trigger('change');
        $('#villageFilter').val(villageId).trigger('change');

        $('#boothFilter').select2({
            placeholder: "Select Booth No."
        });

        $('#casteFilter').select2({
            placeholder: "Select Caste"
        });
        $('#villageFilter').select2({
            placeholder: "Select Village"
        });
        $('#filterButton').on('click', function () {
            debugger
            var selectedBooth = $('#boothFilter').val();
            var selectedCaste = $('#casteFilter').val();
            var selectedVill = $('#villageFilter').val();
            // Check if both are empty
            if ((!selectedBooth || selectedBooth.length === 0) &&
                (!selectedCaste || selectedCaste.length === 0) &&
                (!selectedVill || selectedVill.length === 0)
            ) {

                Swal.fire({
                    icon: 'warning',
                    title: 'No filter selected',
                    text: 'Please select at least one booth or caste or village to filter data.',
                    confirmButtonText: 'OK'
                });

                return; // Stop further execution
            } else {

                const url = `${window.location.pathname}?type=${type}&boothIds=${selectedBooth}&casteIds=${selectedCaste}&villageIds=${selectedVill}`;
                window.location.href = url;
            }
        });

        $('#resetFilters').click(function () {
            $('#boothFilter').val('');
            $('#casteFilter').val('');
            $('#villageFilter').val('');

            // Reload page with empty query string
            window.location.href = `${window.location.pathname}?type=${type}`;
        });
    })
</script>

<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 310,
             

            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Admin/VarishthNaagarikViklaang?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#myTable')) {
                $('#myTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>


