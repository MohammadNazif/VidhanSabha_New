<div class="container-fluid  m-3  w-100">
    <div class="d-flex justify-content-between mb-2">
        <h4 style="color: #FF8C42;">Mandal Reports</h4>
    </div>

    <div class="table-wrapper shadow rounded p-2">
        <div class="table-controls">
            <div id="entriesAndExport" class="d-flex align-items-center gap-2">
                <div id="exportIcons" class="d-flex align-items-center gap-1">

                    <a href="@Url.Action("MandalExportReport", "Export", new { format = "excel" })"
        <i class="bi bi-file-earmark-excel-fill"  style="font-size: 1.3rem; color: #1D6F42; cursor:pointer;"></i>
     </a>

                    <a href="@Url.Action("MandalExportReport", "Export", new { format = "pdf" })"
     <i class="bi bi-file-earmark-pdf-fill"  style="font-size: 1.3rem; color: #D32F2F; cursor: pointer;"></i>
     </a>
                </div>

            </div>
            <div id="searchBox"></div>
        </div>





        <div class="  " style="white-space:nowrap!important;">

            <table id="myTable" class="table table-responsive-lg table-hover table-bordered align-middle">



                <thead class="table-head">
                    <tr class="myhead">

                        <th class="text-white py-2" style="text-align:center!important;">S.N.</th>
                        <th class="text-white py-2">Mandal Name</th>
                        <th class="text-white py-2">Total Sector</th>
                        <th class="text-white py-2">Total Booth</th>
                        <th class="text-white py-2">Total Votes</th>
                        <th class="text-white py-2">Senior Citizen</th>
                        <th class="text-white py-2">Handicap</th>
                        <th class="text-white py-2">Double Votes</th>
                        <th class="text-white py-2">Pravasi</th>
                        <th class="text-white py-2">Effective Person</th>

                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1;
                        foreach (var data in Model)
                        {
                            <tr class="text-center align-middle" id="row_@data.Id">


                                <td class="py-2 text-center">@i</td>
                                <td class="py-2 text-left">@data.Name</td>
                                <td>
                                    <a href="javascript:void(0);" class="sector-link text-primary fw-bold text-center" data-id="@data.Id">
                                        @data.TotalSectors
                                    </a>
                                </td>
                                <td>
                                    <a href="javascript:void(0);" class="booth-link text-success fw-bold text-center" data-id="@data.Id">
                                        @data.TotalBooths
                                    </a>
                                </td>
                                <td class="text-center">@data.TotalVotes</td>
                                <td class="text-center">@data.SeniorCount</td>
                                <td class="text-center">@data.DisabledCount</td>
                                <td class="text-center">@data.DoubleVotes</td>
                                <td class="text-center">@data.PravasiCount</td>
                                <td class="text-center">@data.EffectivePerson</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




