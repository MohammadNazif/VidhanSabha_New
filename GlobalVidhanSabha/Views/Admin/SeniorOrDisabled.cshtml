<script>
    document.getElementById('dataModal').addEventListener('hidden.bs.modal', function () {
        const form = document.getElementById('dataForm');
        if (form) form.reset();

        // Clear hidden ID field
        const hiddenId = document.getElementById('Id');
        if (hiddenId) hiddenId.value = '';

        // Reset dropdowns
        $('#boothId').val('').trigger('change');
        const villageField = document.getElementById('VillageList');
        if (villageField) $(villageField).val([]).trigger('change');

        // Clear dynamic inputs but keep placeholders
        $('#entriesContainer .entry-group').each(function () {
            $(this).find('input:not([type=hidden]), select, textarea').each(function () {
                const $field = $(this);
                $field.val('');
                if ($field.is('select')) {
                    $field.prop('selectedIndex', 0).trigger('change');
                }
            });
        });

        $('#SeniorOrDisabled').val('').trigger('change');
    });

</script>
