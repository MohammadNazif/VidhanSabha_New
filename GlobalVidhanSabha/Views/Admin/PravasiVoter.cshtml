<script>
$(document).ready(function () {

    // Initialize select2
    $('#VillageList').select2();

    // ✅ Step 2: Read preselected villages from Model (for edit mode)
    // If Model.VillageListId = "2,4,7"
    window.selectedVillages = "@(Model.VillageListId ?? "")".split(',')
        .filter(x => x !== "");  // remove empty strings

    const boothId = $('#boothno').val();

    // ✅ Step 3: Load village list when BoothNo changes OR when editing existing record
    if (boothId) {
        loadVillages(boothId, window.selectedVillages);
    }

    $('#boothno').on('change', function () {
        const newBoothId = $(this).val();
        if (newBoothId) {
            window.selectedVillages = []; // reset for insert/new selection
            loadVillages(newBoothId, []);
        } else {
            $('#VillageList').empty();
        }
    });

    // ✅ Step 4: AJAX loader function
    function loadVillages(boothId, selected) {
        $.ajax({
            url: '@Url.Action("GetVillagesByBoothId", "Admin")',
            type: 'GET',
            data: { boothId: boothId },
            success: function (villages) {
                const $villageList = $('#VillageList');
                $villageList.empty();
                $villageList.append('<option value="">-- Select Village --</option>');

                villages.forEach(v => {
                    const isSelected = selected.includes(v.villageId.toString());
                    const option = `<option value="${v.villageId}" ${isSelected ? "selected" : ""}>${v.Villagename}</option>`;
                    $villageList.append(option);
                });

                // refresh select2
                $villageList.trigger('change');
            }
        });
    }
});
</script>

