                searching: true,
                scrollX: true,
                scrollY: 350,
                columnDefs: [
                    { width: "60px", targets: 0 },   // Col 1 (same)
                    { width: "100px", targets: 1 },  // Col 2 (same)

                    { width: "105px", targets: 2 },
