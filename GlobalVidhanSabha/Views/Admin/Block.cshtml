                        <div class="row">
                            <!-- Dropdown for Part Name -->
                            <div class="col-md-6">
                                <label class="form-label small">Part Name</label>
                                
                                <select name="party">
                                    <option value="">--Select--</option>
                                    @foreach (var data in party)
                                    {
                                        <option value="@data.id">@data.party</option>
                                    }
                                </select>

                            </div>

                            <!-- Contact Field -->
