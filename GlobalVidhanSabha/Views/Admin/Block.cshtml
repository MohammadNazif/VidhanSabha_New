<script>
    $(document).ready(function () {

        let dt;
        let currentPage = 1;
        let limit = 100;

        initDataTable(limit);

        function initDataTable(limit) {

            dt = new DataTable('#myTable', {
                paging: true,
                pageLength: limit,
                lengthMenu: [100, 200, 300, 400, 500],
                searching: true,
                scrollX: true,
                scrollY: 150
            });

            dt.on('page.dt', function () {

                limit = getLimit();
                currentPage = dt.page() + 1;

                console.log("Page:", currentPage, "Limit:", limit);

                loadBackend(currentPage, limit);
            });
        }

        function getLimit() {
            return parseInt($(".dt-length select").val()) || 100;
        }

        $(document).on("change", ".dt-length select", function () {
            limit = getLimit();
            console.log("Limit changed:", limit);
        });

        function loadBackend(page, limit) {
            $.ajax({
                url: `/Admin/Block?page=${page}&limit=${limit}`,
                type: "GET",
                success: function (html) {
                    $("#tableContainer").html(html);
                    reinitialize(limit);
                }
            });
        }

        function reinitialize(limit) {
            if ($.fn.DataTable.isDataTable('#myTable')) {
                $('#myTable').DataTable().destroy();
            }
            initDataTable(limit);
        }
    });
</script>
<script>
    $(document).ready(function () {
        $("#Category").change(function () {
            var selectedId = $(this).val();

            if (selectedId) {
                $.ajax({
                    url: '/Admin/GetSubcasteByCategory',
                    type: 'GET',
                    data: { id: selectedId },
                    success: function (response) {

                        $("#Caste").empty();
                        $("#Caste").append('<option value="">-- Select Caste --</option>');


                        $.each(response, function (i, item) {
                            $("#Caste").append('<option value="' + item.SubCaste_Id + '">' + item.SubCasteName + '</option>');
                        });
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Some error occured!!'
                        });
                    }
                });
            } else {
                $("#Caste").empty();
                $("#Caste").append('<option value="">-- Select Caste --</option>');
            }
        });
    });
</script>

<script>
    $(document).ready(function () {
        // Handle block form submit
        $('#blockForm').submit(function (e) {
            e.preventDefault();

            var formData = new FormData(this);

            $.ajax({
                url: '/Admin/AddBlock', // Adjust the controller if needed
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response.message
                        }).then(() => {
                            location.reload(); // Refresh the page to reflect changes
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'AJAX Error',
                        text: error
                    });
                }
            });
        });
    });
    $(document).on('click', '.edit-btn', function () {

        var blockId = $(this).data('id');

        $.ajax({
            url: '/Admin/GetBlockById',
            type: 'GET',
            data: { id: blockId },
            success: function (response) {
                if (response.success) {
                    var data = response.data;

                    // Populate form fields
                    $('#Block_Id').val(data.Block_Id);
                    $('[name="BlockName"]').val(data.BlockName);
                    $('[name="InchargeName"]').val(data.InchargeName);
                    $('[name="Contact"]').val(data.Contact);
                    $('[name="Address"]').val(data.Address);
                    $('[name="Occupation"]').val(data.Occupation);
                    $('[name="Category"]').val(data.Category).trigger('change'); // If Category change loads Caste options
                    $('[name="party"]').val(data.party);
                    // Wait for Caste dropdown to load (optional delay or hook into success callback)
                    setTimeout(function () {
                        $('[name="Caste"]').val(data.Caste);
                    }, 300);

                    // Open modal
                    $('#createBlockModal').modal('show');
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while fetching block data.'
                });
            }
        });
    });
    $(document).on('click', '.delete-btn', function () {
        var blockId = $(this).data('id');
        var row = $(this).closest('tr');

        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/DeleteBlock',
                    type: 'POST',
                    data: { id: blockId },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire('Deleted!', response.message, 'success');
                            // Remove the row from table
                            row.fadeOut(500, function () { $(this).remove(); });
                        } else {
                            Swal.fire('Error!', response.message, 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error!', 'Something went wrong on the server.', 'error');
                    }
                });
            }
        });
    });

</script>
