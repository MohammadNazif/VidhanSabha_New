                            const numbers = item.Number || [];
                            const castIds = item.castNameId || [];
                            const castVoterIds = item.castVoterId || [];

                            for (let i = 0; i < castNames.length; i++) {
                                const castVoterId = castVoterIds[i] || castVoterIds[0] || 0;

                                html += `
                        <tr>
                            <td>${serial}</td>
                            <td>${castNames[i]}</td>
                            <td>${numbers[i]}</td>
                            <td>
                                <button class="btn btn-sm me-1 edit-row"
                                        data-castvoterid="${castVoterId}"
                                        data-castid="${castIds[i]}"
                                        data-number="${numbers[i]}">
                                    <i class="fas fa-edit text-success"></i>
                                </button>
                                <button class="btn btn-sm me-1 delete-row text-danger"
                                        data-castvoterid="${castVoterId}"
                                        data-castid="${castIds[i]}">
                                    <i class="fas fa-trash-alt text-red"></i>
                                </button>
                            </td>
                        </tr>`;
                                serial++;
                            }
                        });
                    } else {
                        html = '<tr><td colspan="4">No records found</td></tr>';
                    }

                    $('#castVoterTable tbody').html(html);
                },
                error: function () {
                    Swal.fire('Error', 'Something went wrong while loading data.', 'error');
                }
            });
        });

    }
    showCastVoterDes();
</script>

