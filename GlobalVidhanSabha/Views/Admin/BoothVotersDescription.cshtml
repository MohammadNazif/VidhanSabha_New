<script>
    const totalInput = document.getElementById("TotalVoters");
    const manInput = document.getElementById("Man");
    const womanInput = document.getElementById("Woman");
    const otherInput = document.getElementById("Other");

    let isOtherManuallyChanged = false;

    // Flag to check if "Other" was manually changed
    otherInput.addEventListener('input', () => {
        isOtherManuallyChanged = true;
        validateVoters(); // Re-validate when user types manually
    });

    function autoFillOther() {
        const total = parseInt(totalInput.value) || 0;
        const man = parseInt(manInput.value) || 0;
        const woman = parseInt(womanInput.value) || 0;

        // Sirf tabhi auto-calc kare jab tino values fill ho
        if (total > 0 && man > 0 && woman > 0 && !isOtherManuallyChanged) {
            const remaining = total - (man + woman);
            if (remaining >= 0) {
                otherInput.value = remaining;
            } else {
                otherInput.value = '';
            }
        }

        validateVoters(); // Always validate
    }

    function validateVoters() {
        const total = parseInt(totalInput.value) || 0;
        const man = parseInt(manInput.value) || 0;
        const woman = parseInt(womanInput.value) || 0;
        const other = parseInt(otherInput.value) || 0;

        const sum = man + woman + other;

        if (sum > total) {
            Swal.fire({
                icon: 'warning',
                title: 'Invalid Voter Count',
                text: `Sum of Man, Woman, and Other voters (${sum}) cannot exceed Total Voters (${total}).`,
                confirmButtonColor: '#FF8C42'
            });
        }
    }

    // Attach input listeners
    manInput.addEventListener('input', autoFillOther);
    womanInput.addEventListener('input', autoFillOther);
    totalInput.addEventListener('input', autoFillOther);
</script>



