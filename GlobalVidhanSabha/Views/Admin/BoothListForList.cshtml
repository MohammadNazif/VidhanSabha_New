            if (
                (!selectedMandal || selectedMandal.length === 0) &&
                (!selectedSector || selectedSector.length === 0) && (!selectedBooth || selectedBooth.length === 0)
            ) {

                Swal.fire({
                    icon: 'warning',
                    title: 'No filter selected',
                    text: 'Please select at least one mandal or sector or caste or village to filter data.',
                    confirmButtonText: 'OK'
                });

                return; // Stop further execution
            } else {

                const url = `${window.location.pathname}?mandalIds=${selectedMandal}&sectorIds=${selectedSector}&boothIds=${selectedBooth}`;
                window.location.href = url;
            }
        });

        $('#resetFilters').click(function () {
            $('#mandalFilter').val('');
