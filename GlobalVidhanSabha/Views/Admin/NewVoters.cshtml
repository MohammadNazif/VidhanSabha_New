<script>
    document.getElementById("DOB").addEventListener("change", function () {
        let dob = new Date(this.value);
        let fixedDate = new Date("2027-01-01");

        if (isNaN(dob.getTime())) {
            document.getElementById("age").value = "";
            return;
        }

        if (dob > fixedDate) {
            document.getElementById("age").value = "";
            alert("DOB 1 Jan 2027 se pehle ka hona chahiye!");
            return;
        }

        let years = fixedDate.getFullYear() - dob.getFullYear();
        let months = fixedDate.getMonth() - dob.getMonth();
        let days = fixedDate.getDate() - dob.getDate();


        if (days < 0) {
            months--;
            let prevMonth = new Date(fixedDate.getFullYear(), fixedDate.getMonth(), 0);
            days += prevMonth.getDate();
        }


        if (months < 0) {
            years--;
            months += 12;
        }


        document.getElementById("age").value =
            years + " Years " + months + " Months " + days + " Days";
    });
</script>




<script>
    $(document).on("click", ".delete-btn", function () {
        var id = $(this).data("id");

        if (!id) {
            Swal.fire("Error!", "No ID found for deletion.", "error");
            return;
        }
        Swal.fire({
            title: "Are you sure?",
            text: "This record will be permanently deleted!",
