    </div>

    <div class="table-wrapper shadow rounded p-2">
        <div class="table-controls ">
            <div id="entriesAndExport"></div>
            <div id="searchBox"></div>
        </div>

        <div class="  " style="white-space:nowrap!important;">

            <table id="boothTable" class="table table-responsive-lg table-hover table-bordered align-middle">


                <thead class="table-head" style="color:white!important;">
                    <tr class="text-light myhead">
                        <th class="col-1 table-clr" style="text-align:center!important;">S.N.</th>
                        <th  class="table-clr">Title</th>
                        <th  class="table-clr">Description</th>
                        <th  class="table-clr">Date</th>
                        <th class="col-1 table-clr" style="text-align:center!important;">Images</th>
                        <th class="col-1 table-clr" style="text-align:center!important;">Video</th>

                    </tr>
                </thead>
                <tbody>
                    @if (AdminActivities != null && AdminActivities.Any())
                    {
                        int count = 1;
                        foreach (var item in AdminActivities)
                        {
                            <tr>
                                <td style="text-align:center!important;">@count</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.ActivityDate.ToString("dd-MM-yyyy")</td>
                                <td style="text-align:center!important">
                                    @if (item.ImagePaths != null && item.ImagePaths.Any())
                                    {
                                        foreach (var img in item.ImagePaths)
                                        {
                                            <a href="@Url.Content(img)" target="_blank" title="Open Image">
                                                <i class="bi bi-eye-fill m-1" style="font-size: 1.5rem; cursor:pointer;"></i>
                                            </a>
                                        }
                                    }
                                </td>

                                <td style="text-align:center!important;">
                                    @if (!string.IsNullOrEmpty(item.VideoUrl))
                                    {
                                        <a href="@item.VideoUrl" target="_blank" title="View Video">
                                            <i class="bi bi-play-circle-fill"
                                               style="font-size: 1.8rem; color: #FF8C42; cursor:pointer;">
                                            </i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span>No Video</span>
                                    }
                                </td>

                            </tr>
                            count++;
                        }
                    }

                </tbody>
            </table>
        </div>
